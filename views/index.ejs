<!DOCTYPE html>
<html>
	<head>
		<title>To-Do List</title>
		<link rel="stylesheet" href="/style.css" />
	</head>
	<body>
		<div class="container">
			<h1>To-Do List</h1>
			<a href="/task/new" class="button">Add New Task</a>
			<ul>
				<% tasks.forEach(task => { %>
				<li>
					<h2><%= task.title %></h2>
					<p><%= task.description %></p>
					<p>Status: <%= task.status %></p>
					<a href="/task/<%= task._id %>/edit" class="button">Edit</a>
					<form
						action="/task/<%= task._id %>/delete"
						method="post"
						style="display: inline"
					>
						<button type="submit" class="button">Delete</button>
					</form>
				</li>
				<% }); %>
			</ul>
		</div>
	</body>
</html>
